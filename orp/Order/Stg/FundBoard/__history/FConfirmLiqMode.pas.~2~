unit FConfirmLiqMode;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TFrmLiqMode = class(TForm)
    cbConfirm: TCheckBox;
    Label1: TLabel;
    Button1: TButton;
    Button2: TButton;
    Label2: TLabel;
    Label3: TLabel;
  private
    { Private declarations }
  public
    { Public declarations }
    function Open( stName : string; iQty : integer ) : boolean;
  end;

var
  FrmLiqMode: TFrmLiqMode;

implementation

{$R *.dfm}

{ TFrmLiqMode }

function TFrmLiqMode.Open(stName: string; iQty: integer): boolean;
begin
  Label2.Caption := Format('(%s) 펀드의  잔고 수량(%d) 을 주문수량으로 자동 적용', [  stName, iQty ]);
  Result := (ShowModal = mrOK);
end;

end.
