    436: CheckQuoteFile; // clip quote file (clip a part of quote file and save to a file)

      // bear
    420:  gEnv.Engine.FormBroker.Open(ID_BEAR, 0);
    421:  gEnv.Engine.FormBroker.Open(ID_BULL, 0);
    //422:  gEnv.Engine.FormBroker.Open(ID_AUTO, 0);
    501:
      begin
        TFrmTool.Create(self).Show;
      end ;
    502: TBoardConfig.Create(self).Show;
    503: gEnv.Engine.FormBroker.Open(ID_CURRENT_TIME, 0);
    601: gEnv.Engine.FormBroker.Open(ID_MONITORING, 0);
    602: genv.Engine.FormBroker.Open(ID_HOGADIST, 0);
  end;
end;

procedure TOrpMainForm.MasterReceived(Sender: TObject; Value: String);
begin

  if gEnv.PacketVer = pv4 then
    FSymbolLoader.ImportMasterFromFilePv4( Value, gEnv.AppDate )
  else if (gEnv.PacketVer = pv2) or (gEnv.PacketVer = pv3) then
    FSymbolLoader.ImportMasterFromFilePv2( Value, gEnv.AppDate )
  else
    FSymbolLoader.ImportMasterFromFile( Value, gEnv.AppDate );

end;

procedure TOrpMainForm.FormOpen(iFormID, iVar: Integer; var aForm: TForm);
var
  bForm : TForm;
begin
  aForm := nil;

  if ( iFormID = ID_SIMULFORM ) and
   ( gEnv.RunMode = rtRealTrading ) then
    Exit;

  case iFormID of
    //ID_SKEW: aForm := TSkewForm.Create(Self);
    ID_SKEW:
      aForm :=TFrmAppInfo.Create( self );

    ID_ORDERBOARD: aForm := TOrderBoardForm.Create(Self);
    ID_ORDER:
      begin
        aForm := TOrderForm.Create(Self);
        (aForm as TOrderForm).Engine := gEnv.Engine;
      end;
    ID_SYSTEM_ORDER : aForm := TSystemOrderForm.Create(self);
    ID_ORDER_LIST:
      begin
        aForm := TFrmOrderList2.Create(Self);
        //(aForm as TFrmOrderList2).Engine := gEnv.Engine;
      end;
    ID_POSITION_LIST:
      begin
        aForm := TPositionListupForm.Create(Self);
        (aForm as TPositionListupForm).Engine := gEnv.Engine;
      end;

    ID_MINI_POSITION_LIST:
        aForm := TFrmMiniPosList.Create(Self);

    ID_VIRTUAL_TRADE: // unique
      begin
        if not gEnv.Simul then
          Exit;

        if (gEnv.Simul) and (gEnv.Engine.VirtualTradeService = nil) then
          gEnv.Engine.CreateVirtualTrade;

        if VirtualTradeServiceForm = nil then
        begin
          aForm := TVirtualTradeServiceForm.Create(Self);
          VirtualTradeServiceForm := aForm as TVirtualTradeServiceForm;
          VirtualTradeServiceForm.Service := gEnv.Engine.VirtualTradeService;
        end else
          aForm := VirtualTradeServiceForm;
      end;
    ID_QUOTE_SIMULATION:
      begin
        aForm := TKRXQuoteEmulationForm.Create(Self);
        with aForm as TKRXQuoteEmulationForm do
        begin
          OnReset := SymbolReset;
          OnLoad := SymbolLoad;
          OnTime := QuoteTime;
          OnQuote := QuoteReceived; // APIed quote
          OnMaster:= MasterReceived;
          OnLog := DoLog;
          OnOrderReset  := OrderReset;

          QuoteFileDir := gEnv.QuoteDir;//ComposeFilePath([gEnv.RootDir, DIR_QUOTEFILES]);
          FillFileDir := ComposeFilePath([gEnv.RootDir, DIR_FILLFILES]);
        end;
      end;
    ID_QUOTE_SELECT : aForm := TSymbolSearch.Create(Self);
    ID_BULL : aForm := TBullSystemForm.Create( self );

    ID_MONITORING : aForm  := TMonitoring.Create( self );
    ID_HOGADIST   : ;//aForm  := TFrmAnalysis.Create( self );

    ID_SIMULFORM : aForm := TSimulationMain.Create( Self );
    ID_CHART  : aForm := TChartForm.Create( Self );
    ID_PROTECT: // aForm := TProtectStopOrder.Create(self);
           aForm := TFrmZombiePDT.Create( Self );

    ID_QUOTING  :
      begin
        aForm := TFormMain.Create( self );
      end;
    ID_JANGJUNG :
      begin

        aForm := TFrmJangJungManager.Create( Self );
      end;
    ID_FOFILLVOL :
      begin

        aForm := TFrmFOSideVol.Create( self );
        gEnv.FOFillVol := TFrmFOSideVol( aForm );
      end;
    ID_SAVEPOS :
      begin
        aForm := TFrmOrderMngr.Create( Self );
      end;
    ID_ENTRYPRICE : aForm := TFrmEntryPrice.Create( Self );
    ID_CURRENT_TIME : aForm := TFrmCurrentTime.Create( Self );

    ID_ARBMONITOR  : aForm := TFrmArbPLMonitor.Create( Self);
    ID_VOL_TRADE : aForm := TFrmVolTarde.Create(self);
    ID_STRANGLE : aForm := TFrmStrangle.Create(self);
    ID_BAN_HULT_OPT : aForm := TFrmBHultOpt.Create(self);
    ID_VOL_INVESTOR : aForm := TFrmInvestor.Create(self);
    ID_RATIOSPREAD : aForm := TFrmRatioSpread.Create(self);
    ID_STRANGLESEQUEL : aForm := TFrmStrangleSequel.Create(self);
    ID_INVESTOR : aForm := TFrmTrendTrade.Create(self);
    ID_TODARKE  : aForm := TFrmTodarke.Create( Self );
    ID_HULT_HEDGE  : aForm := TFrmHultHedge.Create(Self);
    ID_BAN_HULT: aForm := TFrmBHult.Create( Self );
    ID_HULT  : aForm := TFrmHulTrade.Create(self) ;
    ID_HLT   : aForm := TFrmHLTRade.Create(self) ;
    ID_RATIOS : aForm := TFrmRatioS.Create(self) ;
    ID_VOLS : aForm := TFrmVolS.Create(self) ;
    ID_PAVE_ORDER : aForm := TFrmPaveOrder.Create(Self);
    ID_SHEEP_BUY: aForm := TFrmSheepBuy.Create( Self );
    ID_SHORT_HULT : aForm := TFrmShortHult.Create(Self);
    ID_STOP_LIST  : aForm := TFrmStopOrderList.Create( Self );
  end;
end;

procedure TOrpMainForm.FormReLoad(iFormID: integer; aForm: TForm);
begin
  case iFormID of
    ID_ORDERBOARD:
      if aForm is TOrderBoardForm then
        (aForm as TOrderBoardForm).ReLoad;
    ID_ORDER_LIST:
      if aForm is TFrmOrderList2 then
        (aForm as TFrmOrderList2).ReLoad;
    ID_POSITION_LIST:
      if aForm is TPositionListForm then
        (aForm as TPositionListForm).ReLoad;
  end;

end;

procedure TOrpMainForm.FormLoad(iFormID: Integer; aStorage: TStorage; var aForm: TForm);
var
  aItem : TForm;

begin
    // create/get form
   if iFormID = ID_LPCODE then
   begin
     gEnv.Engine.GiFillter.LoadEnv(aStorage );
     aItem := gEnv.Engine.FormBroker.FindFormID2( ID_QUOTE_SELECT );
     if aItem <> nil then
       TSymbolSearch( aItem ).Update;
     Exit;
   end;

   if (iFormID = ID_VIRTUAL_TRADE) and ( not gEnv.Simul ) then
    Exit;

  if ( iFormID = ID_SKEW ) and
   ( gEnv.RunMode = rtSimulation ) then
    Exit;

  if ( iFormID = ID_QUOTE_SIMULATION ) and ( gEnv.RunMode = rtSimulation ) then
    Exit;

  if iFormID = ID_GURU_MAIN then
  begin
    LoadEnv( aStorage );
    Exit;
  end;

  FormOpen(iFormID, 0, aForm);
    //
  if aForm = nil then Exit;

    //
  case iFormID of
    ID_SKEW: ;
    ID_ORDERBOARD:
      if aForm is TOrderBoardForm then
        (aForm as TOrderBoardForm).LoadEnv(aStorage);
    ID_ORDER: ;
    ID_ORDER_LIST:
      if aForm is TFrmOrderList2 then
        (aForm as TFrmOrderList2).LoadEnv(aStorage);

    ID_VIRTUAL_TRADE:
      if aForm is TVirtualTradeServiceForm then
        (aForm as TVirtualTradeServiceForm).LoadEnv(aStorage);
    ID_QUOTE_SIMULATION:
      if aForm is TKRXQuoteEmulationForm then
        (aForm as TKRXQuoteEmulationForm).LoadEnv(aStorage);

    ID_HOGADIST: ;
    {
      if aForm is TFrmAnalysis then
        (aForm as TFrmAnalysis).LoadEnv(aStorage);
    }
    ID_BULL:
      if aForm is TBullSystemForm then
        ( aForm as TBullSystemForm).LoadEnv(aStorage);
    ID_CHART:
      if aForm is TChartForm then
        ( aForm as TChartForm).LoadEnv( aStorage);
    ID_PROTECT:
      if aForm is TFrmZombiePDT then
        ( aForm as TFrmZombiePDT).LoadEnv( aStorage );

    ID_QUOTING  :
      if aForm is TFormMain then
        ( aForm as TFormMain ).LoadEnv( aStorage );
    ID_JANGJUNG :
      if aForm is TFrmJangJungManager then
        ( aForm as TFrmJangJungManager).LoadEnv( aStorage );

    ID_SAVEPOS :
      if aForm is TFrmOrderMngr then
        ( aForm as TFrmOrderMngr ).LoadEnv( aStorage );

    ID_CURRENT_TIME :
      if aForm is TFrmCurrentTime  then
        ( aForm as TFrmCurrentTime).LoadEnv( aStorage );

    ID_POSITION_LIST :
        if aForm is TPositionListupForm  then
        ( aForm as TPositionListupForm).LoadEnv( aStorage );

    ID_MINI_POSITION_LIST :
        if aForm is TFrmMiniPosList  then
        ( aForm as TFrmMiniPosList).LoadEnv( aStorage );

    ID_ARBMONITOR :
        if aForm is TFrmArbPLMonitor  then
        ( aForm as TFrmArbPLMonitor).LoadEnv( aStorage );

    ID_BAN_HULT :
        if aForm is TFrmBHult  then
        ( aForm as TFrmBHult).LoadEnv( aStorage );

    ID_HULT  :
      if aForm is TFrmHulTrade  then
        ( aForm as TFrmHulTrade).LoadEnv( aStorage );

    ID_HLT   :
      if aForm is TFrmHLTrade  then
        ( aForm as TFrmHLTrade).LoadEnv( aStorage );

    ID_RATIOS :
      if aForm is TFrmRatioS  then
        ( aForm as TFrmRatioS).LoadEnv( aStorage );
    ID_VOLS :
      if aForm is TFrmVolS  then
        ( aForm as TFrmVolS).LoadEnv( aStorage );

    ID_INVESTOR :
      if aForm is TFrmTrendTrade  then
        ( aForm as TFrmTrendTrade).LoadEnv( aStorage );

    ID_PAVE_ORDER :
      if aForm is TFrmPaveOrder  then
        ( aForm as TFrmPaveOrder).LoadEnv( aStorage );

    ID_HULT_HEDGE :
      if aForm is TFrmHultHedge  then
        ( aForm as TFrmHultHedge).LoadEnv( aStorage );

    ID_BAN_HULT_OPT :
      if aForm is TFrmBHultOpt  then
        ( aForm as TFrmBHultOpt).LoadEnv( aStorage );

    ID_SHEEP_BUY :
        if aForm is TFrmSheepBuy  then
        ( aForm as TFrmSheepBuy).LoadEnv( aStorage );

    ID_VOL_INVESTOR :
        if aForm is TFrmInvestor  then
        ( aForm as TFrmInvestor).LoadEnv( aStorage );

    ID_STRANGLE :
        if aForm is TFrmStrangle  then
        ( aForm as TFrmStrangle).LoadEnv( aStorage );

    ID_SHORT_HULT :
        if aForm is TFrmShortHult  then
        ( aForm as TFrmShortHult).LoadEnv( aStorage );
  end;
end;

